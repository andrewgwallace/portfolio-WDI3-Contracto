iamJobsIndex
<table class="jobs-index" cellspacing="0" width="90%">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Job</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Contract Price</th>
            <th colspan='3'>Status</th>
        </tr>
    </thead>

    <tfoot>
        <tr>
            <th>Customer</th>
            <th>Job</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Contract Price</th>
            <th colspan='3'>Status</th>
        </tr>
    </tfoot>

    <tbody id="jobs-table-body" >
    </tbody>
        <script type="text/template" id="job-show-template">
                <td data-action='show'> [customer name] (id:<%%= id %>)</td>
                <td data-action='show' class='job-name'> <%%= name %> </td>
                <td data-action='show' class='job-start-date'> <%%= start_date %> </td>
                <td data-action='show' class='job-end-date'> <%%= end_date %> </td>
                <td data-action='show' class='job-contract-price'> $<%%= contract_price %> </td>
                
                <td data-action='toggleClosedStatus' class='job-closed-status'> 
                    <%%= closed_status %> 
                    <input type=checkbox <%%= checkboxify(closed_status)  %> >
                </td>

                <td data-action='togglePausedStatus' class='job-paused-status'> 
                    <%%= paused_status %>
                    <input type=checkbox <%%= checkboxify(paused_status) %> >
                </td>


                <td data-action='destroy'> [del_graphic] </td>
                    // #FIX NOT SURE IF ID NEEDS TO BE HARD CODED HERE, PERHAPS 'THIS' will work
        </script>
</table>
/iamJobsIndex



